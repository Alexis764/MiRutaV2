<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MiRutaV2" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/background</item>
        <!-- Customize your theme here. -->
    </style>

    <!--  Style NavigationRailView  -->
    <style name="styleNavigationRailView">
        <item name="colorPrimary">@color/accent</item>
    </style>


    <!--  Style subtitle  -->
    <style name="styleSubtitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!--  Style text  -->
    <style name="text">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!--  SplashScreen  -->
    <style name="Theme.App.Staring" parent="Theme.SplashScreen">
        <item name="windowSplashScreenAnimationDuration">300</item>
        <item name="windowSplashScreenBackground">@color/background</item>
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="postSplashScreenTheme">@style/Theme.MiRutaV2</item>
    </style>
</resources>