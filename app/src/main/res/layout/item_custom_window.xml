<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="170dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/tvCustomStopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            tools:text="@string/stop"
            android:textColor="@color/background_cards"
            style="@style/text">
        </TextView>

        <ImageView
            android:id="@+id/ivCustomStopImage"
            android:scaleType="centerCrop"
            android:layout_width="100dp"
            android:layout_height="100dp"
            tools:src="@drawable/ic_circle"
            android:contentDescription="@string/content_img_stop">
        </ImageView>

    </LinearLayout>

</androidx.cardview.widget.CardView>